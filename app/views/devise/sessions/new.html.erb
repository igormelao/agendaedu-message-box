    <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => { :id => "login-form" }) do |f| %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "email@examplo.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password  %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "control-label" %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Entrar", class: 'btn btn-custom btn-lg btn-block' %>
      </div>
    <% end %>

