<%= form_for @message, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Para:</label>
    <div class="col-sm-10">
      <input type="text" id="email" name="receiver_email" placeholder="Email" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="subject">Assunto:</label>
    <div class="col-sm-10">
      <input type="text" id="subject" name="message[subject]" placeholder="Assunto" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="message">Mensagem:</label>
    <div class="col-sm-10">
      <textarea name="message[body]" id="message"></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Enviar</button>
    </div>
  </div>
<% end %>
